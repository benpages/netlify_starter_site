 <div class="col">
    <li class="card shadow-sm">
      <a href="{{ post.url }}">
        <img src="{{ post.data.image }}" class="card-img-top" alt="">
      </a>
      <article class="snippet card-body">
        <h4 class="card-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
        <p class="text-muted">{{ post.date | postDate }}</p>
        <p class="card-text">{{ post.data.description }}</p>
        <a href="{{ post.url }}">Read ></a>
      </article>
    </li>
</div>